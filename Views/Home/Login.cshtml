<h1>Login</h1>

<form method="POST" action='@Url.Action("VerificarLogin","Home")' class="m-5">
    <div class="form-group">
        <p class="small" style="transform: rotate(0);">Don't have an
            account?
            <a href='@Url.Action("Registrarse","Home")' class="stretched-link">Register</a>
        </p>
        <label for="exampleInputEmail1">Email</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
        <small id="emailHelp" class="form-text text-muted">We'll never
            share your
            email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" name="password">
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <p></p>
    <h6 style="color:red">@ViewBag.MensajeError</h5>
</form>